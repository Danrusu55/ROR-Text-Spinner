<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <h1> Generated Articles: </h1>
    <div class="col-xs-12">
      <% @articleList.each_with_index do |article,index| %>
        <h3>Article <%= index+1 %>:</h3>
        <p><%= simple_format(article['title']) %></p>
        <p><%= simple_format(article['body1']) %></p>
        <p><%= simple_format(article['body2']) %></p>
        <p><%= simple_format(article['body3']) %></p>
        <p><%= article['keywords'] %></p>
        <br><br>
        <div style="height:50px;"></div>
        <hr>
      <% end %>
      <br>
      <p><%= link_to "GENERATE AGAIN", gen_article_path(@article), class: "some-class" %></p>
    </div>
  </div>
</div>

<script type="text/javascript">
  var copyTextareaBtn = document.querySelector('.js-textareacopybtn');

  copyTextareaBtn.addEventListener('click', function(event) {
  var copyTextarea = document.querySelector('.js-copytextarea');
  copyTextarea.select();

  try {
    var successful = document.execCommand('copy');
    var msg = successful ? 'successful' : 'unsuccessful';
    console.log('Copying text command was ' + msg);
  } catch (err) {
    console.log('Oops, unable to copy');
  }
  });
</script>

